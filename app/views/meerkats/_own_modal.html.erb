<!-- Modal -->
  <div class="modal fade" id="reservationsModal_<%= meerkat.id %>" tabindex="-1" role="dialog" aria-labelledby="reservationsModalTitle" aria-hidden="true">

    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="reservationsModalTitle">Reservations for <%= meerkat.name %></h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <table class="table table-hover">
            <thead class="thead-light">
              <tr>
                <th>Rentee</th>
                <th>Date Start</th>
                <th>Date End</th>
              </tr>
            </thead>
            <tbody>
              <% meerkat.reservations.sort_by(&:created_at).reverse.each do |reservation| %>
                  <tr>
                    <td><%= reservation.user.name %></td>
                    <td><%= reservation.date_start %></td>
                    <td><%= reservation.date_end %></td>
                  </tr>
              <% end %>
            </tbody>
          </table>
        </div>
        <div class="modal-footer">
          <%= link_to 'Edit Meerkat', edit_meerkat_path(meerkat), class: "btn btn-mustard" %>
          <button type="button" class="btn btn-mustard" data-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>
