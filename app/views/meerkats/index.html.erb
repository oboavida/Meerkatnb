<% content_for :class_name, 'transparent' %>
<head>
  <title></title>
</head>

<div class="banner">
  <div id="banner-info" class="container">
    <h1>Welcome to Meerkatnb</h1>
    <p>The perfect platform to find a Meerkat to help you solve your problems</p>
    <a class="btn btn-transparent" href="#banner-scroll-down">Search available Meerkats!</a>
  </div>
</div>

<div id="banner-scroll-down" class="container my-5 text-center">
  <h2>Check out our amazing Meerkat selection!</h2>
</div>

<div class="cards mb-5">
  <% @meerkats.each do |meerkat| %>
    <%= link_to meerkat_path(meerkat) do %>
      <div class="card-trip">
        <%= image_tag(photo_or_fallback(meerkat)) %>
          <div class="card-trip-infos">
            <div>
              <h2><%= meerkat.name %></h2>
              <p><%= meerkat.specialty %></p>
            </div>
            <h2 class="card-trip-pricing"><%= meerkat.price %> â‚¬ per day</h2>
          </div>
        </div>
    <% end %>
  <% end %>
</div>
