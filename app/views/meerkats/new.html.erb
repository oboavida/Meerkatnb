<h1>Create a new Meerkat</h1>

<%= simple_form_for (@meerkat), html: { autocomplete: 'off' } do |f| %>
  <%= f.input :name %>
  <%= f.input :specialty %>
  <%= f.input :age %>
  <%= f.input :price %>
  <%= f.input :location %>
  <%= f.input :description %>
  <%= f.input :photo %>
  <%= f.input :photo_cache, as: :hidden %>
  <%= f.submit %>
<% end %>
