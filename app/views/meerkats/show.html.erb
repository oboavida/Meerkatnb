<h1>Meerkats#show</h1>
<p>Find me in app/views/meerkats/show.html.erb</p>

<div class="container">

  <div class="row">
    <div class="info col-lg-6">
      <h2><%= @meerkat.name %></h2>
      <p><%= @meerkat.age %> years old üìç from <%= @meerkat.location.capitalize %></p>
      <p><%= @meerkat.specialty.capitalize %></p>
      <p><%= @meerkat.description %></p>
      <p>This beautiful meerkat belongs to üíõ <%= @owner.name %></p>
    </div>

    <div class="photo col-lg-6">
      <h2>PHOTO</h2>
      <img src="#">
    </div>
  </div>

</div>

<div class="container">

  <div class="row">
    <div class="card-form-reviews col-lg-6">
      <p class="header-reviews">Enjoyed <%= @meerkat.name.capitalize %> service? Add a review!</p>
      <%= simple_form_for ([@meerkat, Review.new]) do |f| %>
        <div class="form-inputs reviews">
          <%= f.input :rating, label: 'Rating', input_html: { autocomplete: 'off', autofocus: true } %>
          <%= f.input :comment, label: 'Comment', input_html: { autocomplete: 'off', autofocus: true } %>
        </div>

        <div class="form-actions">
          <%= f.submit 'Save', class: 'btn btn-primary btn-lg' %>
        </div>
      <% end %>
    </div>

    <div class="card-reservations col-lg-6">
      <p><%= @meerkat.price %> ‚Ç¨ per day</p>
      <%= simple_form_for([@meerkat, Reservation.new]) do |f| %>
        <div class="row form-wrapper" style="width: 400px; margin: 0;">
          <div class="col-md-6">
            <%= f.input :date_start, as: :string, placeholder: 'Start Date', class: 'form-control', required: false, input_html: {class: "datepicker"} %>
          </div>
          <div class="col-md-6">
            <%= f.input :date_end, as: :string, placeholder: 'End Date', class: 'form-control', readonly: 'true', required: false, input_html: {class: "datepicker"}  %>
          </div>
          <br/>
          <div class="col-md-6">
            <%= f.submit "Book Now", class: "btn btn-primary" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>

</div>




