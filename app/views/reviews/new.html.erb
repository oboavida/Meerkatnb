<div class="d-flex negative_margin">
  <div id="" class="col-md-8 form-area">
    <h1>Give <%= @reservation.meerkat.name.capitalize %> a review!</h1>
    <div class="form mt-4">
        <%= simple_form_for ([@reservation, Review.new]) do |f| %>

          <%= f.input :rating, collection: (1..5).to_a, label: "Rate your experience" %>
          <%= f.input :comment, label: 'Comment', input_html: { autocomplete: 'off', autofocus: true } %>
          <%= f.submit 'Save', class: 'btn btn-mustard' %>
        <% end %>
    </div>
  </div>
  <div class="z-index-positive col-md-4 center-background" style="background-image: url('https://wi-images.condecdn.net/image/Mmda77BqRBJ/crop/1620/f/meerkats.jpg')">

  </div>
</div>
