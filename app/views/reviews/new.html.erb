<h1>Meerkat Reviews</h1>
<p></p>

<div class="container">
  <div class="row">
    <div class="col-xs-4">
      <%= simple_form_for @review do |f| %>
        <%= f.input :content %>
        <%= f.input :rating, collection: (1..5).to_a, label: "Rate your experience" %>
        <%= f.submit "Send your review" %>
      <% end %>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="card-form-reviews">
      <p class="header-reviews">Enjoyed <%= @reservation.meerkat.name.capitalize %> service? Add a review!</p>
      <%= simple_form_for ([@reservation, Review.new]) do |f| %>
        <div class="form-inputs reviews">
          <%= f.input :rating, label: 'Rating', input_html: { autocomplete: 'off', autofocus: true } %>
          <%= f.input :comment, label: 'Comment', input_html: { autocomplete: 'off', autofocus: true } %>
        </div>

        <div class="form-actions">
          <%= f.submit 'Save', class: 'btn btn-primary btn-lg' %>
        </div>
      <% end %>
    </div>
  </div>
</div>

